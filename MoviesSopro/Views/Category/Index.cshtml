@model IEnumerable<Movie.Entities.Category>

<div class="under-header-style">
    <h1 style="color:white;">Category List</h1>
</div>
<div class="container">
    <div class="row mt-5">
        <div class="col-12 text-right">
            <a asp-action="Create" class="btn btn-success mb-5">
                <i class="fas fa-plus-circle"></i>&nbsp; &nbsp;Create
            </a>
        </div>
    </div>
    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th> ID</th>
                <th> Name</th>
                <th> Actions </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td> @Html.DisplayFor(model => category.ID) </td>
                    <td> @Html.DisplayFor(model => category.Name) </td>
               
                    <td>
                        <a asp-action="Edit" asp-route-id="@category.ID" class="btn btn-secondary btn-block">
                            <i class="fas fa-edit"></i>&nbsp;&nbsp;Edit
                        </a>
                        <a asp-action="Details" asp-route-id="@category.ID" class="btn btn-info btn-block">
                            <i class="fas fa-info"></i>&nbsp;&nbsp;Details
                        </a>
                        @if (ViewContext.HttpContext.User.IsInRole("admin"))
                        {
                        }
                        <a asp-action="Delete" asp-route-id="@category.ID" class="btn btn-danger btn-block">
                            <i class="fas fa-trash"></i>&nbsp;&nbsp;Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>